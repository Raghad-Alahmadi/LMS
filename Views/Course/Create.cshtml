@model Course
<h2>Create Course</h2>
<form asp-action="Create">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Instructor</label>
        <select asp-for="InstructorId" asp-items="ViewBag.Instructors"></select>
    </div>
    <button type="submit">Save</button>
</form>
